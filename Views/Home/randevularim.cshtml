@model List<bitirmeMVC5.Models.Randevular>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Randevu İptal Sayfası</title>
    <link rel="stylesheet" href="~/css/randevu_iptal.css">
    <link rel="stylesheet" href="~/css/header.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
</head>
<body>
    <header class="header">
        <div class="header__container">
            <div class="header__logo">
                <a href="~/Home/Index">meditech</a>
            </div>
            <nav class="header__nav">
                <ul class="header__list">
                    <li><a href="~/Home/Index">Anasayfa</a></li>
                    <li><a href="~/Home/Contact">Giriş Yap</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <br>
    <br>
    <br>
    <br>
    <h1>Randevu İptal Sayfası</h1>
    <div class="container" id="randevular">
        <div class="randevu__content" id="randevular">
            <div class="panel">
                @if (Model != null && Model.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>İsim</th>
                                <th>Doktor Adı</th>
                                <th>Saat</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var randevu in Model)
                            {
                                <tr>
                                    <td>@randevu.ID</td>
                                    <td>@randevu.TamAd</td>
                                    <td>@randevu.DoktorTamAd</td>
                                    <td>@randevu.RandevuSaati</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>Randevular bulunamadı.</p>
                }
               
            </div>
        </div>
    </div>
</body>
</html>





